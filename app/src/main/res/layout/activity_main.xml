<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86EAEE"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:text="@string/question1_name"
        android:textSize="32sp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        />

    <Button
        android:id="@+id/option1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#17202A"
        android:text="@string/answer11_name"
        android:textSize="21sp"
        android:background="#2654AB  "
        />

    <Button
        android:id="@+id/option2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#17202A"
        android:text="@string/answer12_name"
        android:textSize="21sp"
        android:background="#28B463 "
        android:layout_marginTop="5dp"
        />
</LinearLayout>